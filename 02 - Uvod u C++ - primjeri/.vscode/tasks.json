{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with gcc",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "main.exe",
                "${file}",
                "-lstdc++",
            ]
        },
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "main.exe",
                "${file}"
            ]
        },
        {
            "label": "Build with make",
            "type": "shell",
            "command": "make"
        }
    ]
}